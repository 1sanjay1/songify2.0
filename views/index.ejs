<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Songify</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Custom css -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"></link>


  </head>


  <body>

    <!-- fixed Navigation bar at the top of page -->
    <% include templates/fixedMainHeader.ejs %>

    <div class="container-fluid default" style="padding: 78px 0;">


      <!-- show all the songs of a perticular category -->
      <div class="row each-song-item">
        <div class="col-md-2"></div>

        <div class="col-md-8 default" style="margin-top: 0px; border: 1px solid #f6f6f6;">
          <!-- song playlist : show all the songs after selecting a perticular album or category -->

          <div class="song_list_wrapper">

              <!-- top of the song list where links are given -->
              <div class="list-header">
                  <div class="left-side">
                      <span><a href="#">New Releases</a></span>
                      <span><a href="#">Top Lists</a></span>
                      <span><a href="#">Featured</a></span>
                  </div>
                  <div class="right-side" style="position: absolute; right: 0;">
                      <span><a href="#">hindi</a></span>
                  </div>
              </div>
              <hr style="background: rgba(255,255,255,0.5);">
              <!-- end top of the list  -->

              <div class="song-list">
                  <div class="song-item">

                      <div class="all-songs">
                        <% for(var i = 0; i < listOfAlbums.length; i++) { %>

                          <div class="single-song" id="mobile-device" >
                              <div style="cursor: pointer">
                                <img class="rounded" src='<%= listOfAlbums[i].imageURL %>' style="width: 100%; height: 100px;">
                                <p><strong><a href="/album">      <%= listOfAlbums[i].title %>        </a></strong></p>
                                <p><small><%= listOfAlbums[i].director %></small></p>
                              </div>
                          </div>

                        <% } %>

                      </div>

                  </div>
              </div>

          </div>

        </div>

        <div class="col-md-2"></div>
      </div>


    </div>


    <!--Fixed  main footer -->
    <% include templates/fixedMainFooter %>
    <!-- End of the main footer -->


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <!-- <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>

    <!-- <script src="/javascripts/main.js"></script> -->

    <!-- Custom jQuery -->
    <script src="/javascripts/ajax.js"></script>



  </body>

</html>
